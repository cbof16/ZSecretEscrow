# ZSecretEscrow Environment Configuration Example
# Copy this file to .env and update with your configuration

# Blockchain Network Configuration
ZCASH_NETWORK=testnet
ZCASH_LIGHTWALLETD_URL=https://testnet.lightwalletd.com:9067
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
NEAR_NETWORK=testnet
NEAR_NODE_URL=https://rpc.testnet.near.org

# Contract Addresses
ZECVAULT_ADDRESS=0xYourContractAddress
ESCROW_INTENT_ID=your-account.testnet

# Private Keys (fill with your actual keys, but NEVER commit them to git)
# Keep these secure and use proper key management in production
PRIVATE_KEY=your_ethereum_private_key
NEAR_ACCOUNT_ID=your-account.testnet
NEAR_PRIVATE_KEY=ed25519:your_private_key
NEAR_CONTRACT_NAME=escrow-intent.your.testnet

# Database Configuration
DB_PATH=./data/zescrow.db

# Transaction Monitoring
MONITOR_UPDATE_INTERVAL=60000
CONFIRMATION_THRESHOLD=12

# API Configuration
API_PORT=3000
API_HOST=localhost
API_ENABLE_CORS=true

# Zcash Monitor Service
ZCASH_UPDATE_INTERVAL=60000
ZCASH_CONFIRMATION_BLOCKS=6

# Zcash Configuration
ZCASH_NODE_URL=https://testnet.lightwalletd.com:9067
ZCASH_WALLET_API_URL=http://localhost:7000
ZCASH_MONITOR_INTERVAL=60000 